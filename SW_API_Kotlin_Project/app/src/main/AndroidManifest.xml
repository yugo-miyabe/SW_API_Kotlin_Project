<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sw.sw_api_kotlin_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SWApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.SW_API_Kotlin_Project"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".screen.film.FilmDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.planet.PlanetDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.people.PeopleDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.people.PeopleActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.film.FilmActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.planet.PlanetActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.webview.WebViewActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>