<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/nav_people">

    <fragment
        android:id="@+id/nav_people"
        android:name="com.sw.sw_api_kotlin_project.ui.people.PeopleFragment"
        android:label="PeopleFragment"
        tools:layout="@layout/fragment_people_list">
        <action
            android:id="@+id/action_nav_people_to_nav_people_detail"
            app:destination="@+id/nav_people_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_people_detail"
        android:name="com.sw.sw_api_kotlin_project.ui.people_details.PeopleDetailsFragment"
        android:label="PeopleDetailsFragment"
        tools:layout="@layout/fragment_people_details" />


    <fragment
        android:id="@+id/nav_films"
        android:name="com.sw.sw_api_kotlin_project.ui.films.FilmsFragment"
        android:label="FilmsFragment"
        tools:layout="@layout/fragment_films_list" />

    <fragment
        android:id="@+id/nav_planets"
        android:name="com.sw.sw_api_kotlin_project.ui.planets.PlanetsFragment"
        android:label="PlanetsFragment"
        tools:layout="@layout/fragment_planets_list" />

</navigation>