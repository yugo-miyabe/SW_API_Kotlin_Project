<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_film"
    app:startDestination="@id/nav_films_list">

    <fragment
        android:id="@+id/nav_films_list"
        android:name="com.sw.sw_api_kotlin_project.screen.film.FilmListFragment"
        android:label="FilmsFragment"
        tools:layout="@layout/fragment_film_list">
        <action
            android:id="@+id/action_nav_films_to_nav_films_detail"
            app:destination="@id/nav_films_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_films_detail"
        android:name="com.sw.sw_api_kotlin_project.screen.film_details.FilmsDetailsFragment"
        android:label="FilmsDetailsFragment"
        tools:layout="@layout/fragment_film_details">
        <argument
            android:name="film"
            app:argType="com.sw.sw_api_kotlin_project.data.model.Film" />
    </fragment>

</navigation>