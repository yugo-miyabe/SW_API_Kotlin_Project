<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vehicle_name_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/vehicles_name"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vehicle_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/vehicle_name_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sand Crawler" />

    <TextView
        android:id="@+id/model_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/vehicles_model_name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_name_label" />

    <TextView
        android:id="@+id/model_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/model_name_label"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_name_label"
        tools:text="Digger Crawler" />

    <TextView
        android:id="@+id/manufacturer_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/vehicles_manufacturer_name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/model_name_text" />

    <TextView
        android:id="@+id/manufacturer_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/manufacturer_name_label"
        app:layout_constraintTop_toBottomOf="@+id/model_name_text"
        tools:text="Corellia Mining Corporation" />

</androidx.constraintlayout.widget.ConstraintLayout>